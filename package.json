{
    "name": "tmsimple",
    "version": "1.0.0",
    "description": "Simple Test Case Management System",
    "private": true,
    "scripts": {
        "bootstrap": "lerna exec npm install",
        "bootstrap:ui": "lerna exec npm install --scope=@tmsimple/ui",
        "bootstrap:server": "lerna exec npm install --scope=@tmsimple/server",
        "bootstrap:e2e-test": "lerna exec npm install --scope=@tmsimple/e2e-test",
        "build": "npx lerna run build",
        "eslint": "eslint . --ext .ts",
        "eslint:fix": "eslint . --ext .ts --fix",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write .   ",
        "unit-test:server": "npx lerna run test --scope=@tmsimple/server",
        "unit-test:ui": "npx lerna run test --scope=@tmsimple/ui",
        "component-test:server": "npx lerna run component-test --scope=@tmsimple/server",
        "component-test:ui": "npx lerna run component-test --scope=@tmsimple/ui",
        "api-test": "npx lerna run api-test --scope=@tmsimple/e2e-test",
        "ui-test": "npx lerna run ui-test --scope=@tmsimple/e2e-test"
    },
    "devDependencies": {
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard-with-typescript": "^22.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.2.5",
        "eslint-plugin-promise": "^6.0.1",
        "lerna": "^6.1.0",
        "prettier": "^2.8.0"
    },
    "author": "Daniel Jim√©nez Ortiz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/DanisaurioRex/tmsimple/testCases"
    },
    "homepage": "https://github.com/DanisaurioRex/tmsimple#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DanisaurioRex/tmsimple.git"
    }
}
